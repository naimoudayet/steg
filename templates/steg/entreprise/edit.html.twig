{% extends 'base.html.twig' %}

{% block title %}.:: S.T.E.G | Entreprise ::.
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row mt-5">
			<div class="col-4">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="/">Accueil</a>
						</li>
						<li class="breadcrumb-item">
							<a href="/entreprise/">Liste des entreprises</a>
						</li>
						<li class="breadcrumb-item" aria-current="page">
							Éditer
						</li>
					</ol>
				</nav>
			</div>

			<div class="container">
				<form action="/entreprise/update" method="POST">
					<div class="row">
						<div class="col-3"></div>
						<div class="col-6">
							<input type="hidden" name="ent_id" value="{{ entreprise.getId() }}">
							<div class="form-group">
								<label for="nom_d_entreprise">Nom d'entreprise</label>
								<input value="{{ entreprise.getNomEnt() }}" type="text" name="nom_d_entreprise" id="nom_d_entreprise" class="form-control" required>
							</div>
							<div class="form-group">
								<label for="responsable">Responsable</label>
								<input value="{{ entreprise.getResponsable() }}" type="text" name="responsable" id="responsable" class="form-control" required>
							</div>
							<div class="form-group">
								<label for="email">Email</label>
								<input value="{{ entreprise.getEmail() }}" type="email" name="email" id="email" class="form-control" required>
							</div>
							<div class="form-group">
								<label for="num_tel">N° de téléphone</label>
								<input value="{{ entreprise.getNumTel() }}" type="number" name="num_tel" id="num_tel" class="form-control" required>
							</div>
						</div>
						<div class="col-3"></div>
					</div>
					<div class="row mt-5">
						<div class="col-3"></div>
						<div class="col-3">
							<a href="/entreprise/" class="btn btn-danger btn-block">
								<i class="fas fa-times mr-1"></i>Annuler
							</a>
						</div>
						<div class="col-3">
							<button type="submit" class="btn btn-success btn-block">
								<i class="fas fa-save mr-1"></i>Sauvegarder</button>
						</div>
						<div class="col-3"></div>
					</div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}
